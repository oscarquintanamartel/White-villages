<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>White Towns of Andalusia</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/allSpots/style.css">
  </head>
  <body>
    <%- include('navbar') %>

    <main class="container-fluid">

    <section class="row section1 justify-content-evenly">

      <div class="col-12 d-flex justify-content-evenly p-5">
        <h2>Check out some hidden gems!</h2>
        <a href="/spot/addSpotSelect"><button class="btn boton">Add Spot</button></a>
      </div>

      <% result.forEach(( spot ) => { %>
      <div class="col-12 col-md-6 col-xl-3 m-4">
        <div class="marco d-flex justify-content-center">
          <div class="card mb-3">
            <img src="/images/spot/<%= spot.img %>" class="card-img-top" alt="imagenCiudad">
            <div class="card-body">
              <h4 class="card-title"><%= spot.spot_name %></h4>
              <hr>
              <h5 class="card-text fst-italic"><%= spot.street %></h5>
              <h5 class="card-text"><%= spot.city_name %></h5>
              <h5 class="card-text"><%= spot.province %></h5>
            </div>
            <div class="d-flex justify-content-center my-2"><a href="/city/oneCity/<%= spot.city_id %>" class="btn boton">See City</a></div>
          </div>
        </div>
      </div>
      <% }) %>

    </section>

    </main>

    <%- include('footer') %>