<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>White Towns of Andalusia</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/selectForm/style.css">
  </head>
  <body>
    <%- include('navbar') %>

    <main class="container-fluid">
      <section class="selectform">
        <div>
          <div class="row text-center py-3">
            <h3 class="col-12">Add new Spot</h3>
          </div>
          <form
            action="/spot/addSpotSelect"
            method="post"
            enctype="multipart/form-data"
            class="row d-flex justify-content-evenly"
          >
            <div class="col-12 col-xl-5 mb-3">
              <label for="spot_name" class="form-label">Spot Name *</label>
              <input
                type="text"
                class="form-control"
                id="spot_name"
                placeholder="Spot Name"
                name="spot_name"
                maxlength="100"
              />
            </div>
            <div class="col-12 col-xl-5 mb-3">
              <label for="street" class="form-label">Street *</label>
              <input
                type="text"
                class="form-control"
                id="street"
                placeholder="Street"
                name="street"
                maxlength="100"
              />
            </div>
            <div class="col-12 col-xl-5 mb-3">
              <label for="formFile" class="form-label">Picture *</label>
              <input class="form-control" type="file" id="img" name="img" />
            </div>
            <div class="col-12 col-xl-5 mb-3">
              <label for="selectCity" class="form-label">Select City *</label>
              <select class="form-select" aria-label="Default select example" name="city_id">
                <option selected>Open this select menu</option>
                <% result.forEach(( city )=> { %>
                <option value="<%= city.city_id %>"><%= city.city_name %></option>
                <% }) %>
              </select>
            </div>
            <div class="col-12 col-xl-11">
              <p class="mx-4">* Required fields</p>
              <p class="mx-4" style="color: red; font-weight: bold;"><%= typeof message != 'undefined' ? message : null %></p>
              <input
                class="btn btn-primary ms-4"
                type="submit"
                value="Submit"
              />
            </div>
          </form>

        </div>
      </section>
    </main>

    <%- include('footer') %>