<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>White Towns of Andalusia</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/oneCity/style.css">
  </head>
  <body>
    <%- include('navbar') %>

    <main class="container-fluid">

    <section class="row section1 justify-content-center py-4">

      <div class="col-12 col-xl-6 sep">
        <div class="marco d-flex justify-content-center">
          <div class="card mb-3 text-center">
            <img src="/images/city/<%= resultCity[0].img %>" class="card-img-top" alt="imagenCiudad">
            <div class="card-body">
              <h4 class="card-title"><%= resultCity[0].city_name %></h4>
              <h5 class="card-text fst-italic"><%= resultCity[0].city_tag %></h5>
              <hr style="margin: auto;" class="my-4">
              <h5 class="card-text">Province: <%= resultCity[0].province %></h5>
              <p class="card-text"><%= resultCity[0].description %></p>
              <hr style="margin: auto;" class="my-4">
              <h5 class="card-text">Contact:</h5>
              <p>Phone Number: <%= resultCity[0].tel %></p>
              <p>Email Us: <%= resultCity[0].email %></p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <hr style="margin: auto;" class="my-5">
    <section class="row section2 pt-3">
      <% resultSpot.forEach(spot => { %>
        <div class="col-12 col-md-6 col-xl-4 py-4">
          <div class="marco d-flex justify-content-center">
            <div class="card hov" style="width: 18rem;">
              <img src="/images/spot/<%= spot.img %>" class="card-img-top" alt="imagenCiudad">
              <div class="card-body">
                <h5 class="card-title fw-bold"><%= spot.spot_name %></h5>
                <p class="card-text fst-italic">
                 <%= spot.street %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
    </section>

    </main>

    <%- include('footer') %>